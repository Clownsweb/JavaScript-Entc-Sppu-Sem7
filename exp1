
function calculateTriangleArea(base, height) {
    return 0.5 * base * height;
}


function calculateCircleArea(radius) {
    return Math.PI * Math.pow(radius, 2);
}


function calculateRectangleArea(length, width) {
    return length * width;
}


let shape = prompt("Enter the shape to calculate area (triangle, circle, rectangle):").toLowerCase();

switch (shape) {
    case "triangle":
        let base = parseFloat(prompt("Enter the base of the triangle:"));
        let height = parseFloat(prompt("Enter the height of the triangle:"));
        alert("The area of the triangle is: " + calculateTriangleArea(base, height));
        break;

    case "circle":
        let radius = parseFloat(prompt("Enter the radius of the circle:"));
        alert("The area of the circle is: " + calculateCircleArea(radius));
        break;

    case "rectangle":
        let length = parseFloat(prompt("Enter the length of the rectangle:"));
        let width = parseFloat(prompt("Enter the width of the rectangle:"));
        alert("The area of the rectangle is: " + calculateRectangleArea(length, width));
        break;

    default:
        alert("Invalid shape entered.");
}
